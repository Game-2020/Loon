[Plugin]
name = IP-Pure
desc = 节点 IP 纯净度检测（IPPure）
desc = ⚠️ 使用前请点击配置按钮（齿轮图标），在“选择策略组”中选择您想检测的节点或策略组（默认为 DIRECT）。
author = Likhixang
# 允许用户选择策略组，对应下方 [Rule] 中的变量
argument = Proxy=select, "DIRECT", "PROXY", "Auto", desc=选择策略组

[Rule]
# 确保检测请求走选定的策略组
DOMAIN-SUFFIX,ippure.com,{Proxy}

[Script]
# 面板脚本 (Tile)
generic script-path=https://raw.githubusercontent.com/Likhixang/Egerny/main/js/IPPure.js, timeout=10, tag=IP 纯净度, img-symbol=shield.checkerboard
