[Script]
# 1. 自动检测模式
# 访问 http://ip-api.com/json 时自动触发通知
http-response ^https?://ip-api\.com/json script-path=https://raw.githubusercontent.com/Game-2020/Loon/refs/heads/main/Script/IP_Quality_Check.js, requires-body=true, timeout=10, tag=IP自动检测

# 2. 手动点击模式 (Loon 卡片)
# 在 Loon 首页点击卡片手动触发
generic script-path=https://raw.githubusercontent.com/Game-2020/Loon/refs/heads/main/Script/IP_Quality_Check.js, timeout=10, tag=IP质量详情, img-url=https://raw.githubusercontent.com/Koolson/Loon-Icon/master/Source/Server_3.png

[MitM]
hostname = ip-api.com